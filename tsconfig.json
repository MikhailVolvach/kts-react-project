{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "pages/*": ["pages/*"],
      "style/*": ["styles/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "img/*": ["assets/img/*"],
      "svg/*": ["assets/svg/*"],
      "font/*": ["styles/Avenir/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
    "include": ["src/**/*"],
    "exclude": [
    "node_modules"
  ]
}